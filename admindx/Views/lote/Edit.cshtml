@model admindx.Models.t_lote

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Styles.Render("~/Content/bootstrap-select-css")

@Scripts.Render("~/bundles/jqueryval")

@Scripts.Render("~/bundles/bootstrap-select-js")
