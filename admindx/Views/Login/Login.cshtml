@{
    ViewBag.Title = "Ingreso";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .form-group {
        margin-bottom: 10px !important;
    }
</style>

<h2>Ingreso</h2>
@using (Html.BeginForm())
{
<br />
<div class="form-group col-md-12">
    <div>@Html.Label("Usuario", new { @class = "control-label col-md-3" })</div>
    <div>@Html.TextBox("Usuario", "", new { @class = "form-control col-md-9" })</div>
</div>

<div class="form-group col-md-12">
    <div>@Html.Label("Clave", new { @class = "control-label col-md-3" })</div>
    <div>@Html.Password("Clave", "", new { @class = "form-control col-md-9" })</div>
</div>
<div class="form-group">
    <div class="col-md-10 text-danger">
        @ViewBag.ErrorLogueo
    </div>
</div>
<br />
<br />
<br />
<div class="form-group">
    <div class="col-md-offset-1 col-md-10">
        <input type="submit" value="Ingresar" class="btn btn-secondary" />
    </div>
</div>
}

@Scripts.Render("~/bundles/jqueryval")